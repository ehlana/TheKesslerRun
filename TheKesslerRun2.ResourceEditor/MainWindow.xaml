<Window x:Class="TheKesslerRun2.ResourceEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:TheKesslerRun2.ResourceEditor.Converters"
        mc:Ignorable="d"
        Title="Kessler Run Resource Editor"
        Height="720"
        Width="1200"
        MinHeight="600"
        MinWidth="900">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:NullToBooleanConverter x:Key="NullToBooleanConverter" />
    </Window.Resources>
    <DockPanel>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}" />
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock Text="Unsaved changes"
                           Visibility="{Binding HasUnsavedChanges, Converter={StaticResource BooleanToVisibilityConverter}}" />
            </StatusBarItem>
        </StatusBar>

        <ToolBarTray DockPanel.Dock="Top">
            <ToolBar>
                <TextBlock Text="Data File:"
                           VerticalAlignment="Center"
                           Margin="0,0,6,0" />
                <TextBox Width="320"
                         Text="{Binding FilePath, UpdateSourceTrigger=PropertyChanged}"
                         VerticalAlignment="Center" />
                <Button Content="Browse..."
                        Width="80"
                        Margin="6,0,0,0"
                        Click="BrowseFilePath_Click" />
                <Separator />
                <Button Content="New"
                        Command="{Binding NewCommand}"
                        Width="60" />
                <Button Content="Load"
                        Command="{Binding LoadCommand}"
                        Width="60"
                        Margin="4,0,0,0" />
                <Button Content="Save"
                        Command="{Binding SaveCommand}"
                        Width="60"
                        Margin="4,0,0,0" />
                <Button Content="Save As..."
                        Width="90"
                        Margin="4,0,0,0"
                        Click="SaveAs_Click" />
            </ToolBar>
        </ToolBarTray>

        <Grid Margin="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="0.04*" />
                <ColumnDefinition Width="4*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0"
                        Orientation="Vertical"
                        Margin="0,0,12,0">
                <GroupBox Header="Resources">
                    <Grid Margin="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="230" />
                            <ColumnDefinition Width="12" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Column="0"
                                    Grid.Row="0"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Left">
                            <Button Content="Add"
                                    Command="{Binding AddResourceCommand}"
                                    Width="60" />
                            <Button Content="Remove"
                                    Command="{Binding RemoveResourceCommand}"
                                    Width="80"
                                    Margin="6,0,0,0" />
                        </StackPanel>

                        <ListBox Grid.Column="0"
                                 Grid.Row="1"
                                 Margin="0,8,0,0"
                                 ItemsSource="{Binding Resources}"
                                 SelectedItem="{Binding SelectedResource, Mode=TwoWay}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Vertical" Margin="0,4" Background="Red">
                                        <TextBlock Text="{Binding DisplayName}" FontWeight="SemiBold" />
                                        <TextBlock Text="{Binding Id}" FontSize="11" Foreground="Gray" />
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <Grid Grid.Column="2"
                              Grid.RowSpan="2"
                              IsEnabled="{Binding SelectedResource, Converter={StaticResource NullToBooleanConverter}}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0"
                                       Grid.ColumnSpan="2"
                                       Text="Resource Details"
                                       FontWeight="Bold" />

                            <TextBlock Grid.Row="1"
                                       Grid.Column="0"
                                       Margin="0,12,6,0"
                                       VerticalAlignment="Center"
                                       Text="Id" />
                            <TextBox Grid.Row="1"
                                     Grid.Column="1"
                                     Margin="0,12,0,0"
                                     Text="{Binding SelectedResource.Id, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                            <TextBlock Grid.Row="2"
                                       Grid.Column="0"
                                       Margin="0,6,6,0"
                                       VerticalAlignment="Center"
                                       Text="Display Name" />
                            <TextBox Grid.Row="2"
                                     Grid.Column="1"
                                     Margin="0,6,0,0"
                                     Text="{Binding SelectedResource.DisplayName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                            <TextBlock Grid.Row="3"
                                       Grid.Column="0"
                                       Margin="0,6,6,0"
                                       VerticalAlignment="Center"
                                       Text="Base Mining Difficulty" />
                            <TextBox Grid.Row="3"
                                     Grid.Column="1"
                                     Margin="0,6,0,0"
                                     Text="{Binding SelectedResource.BaseMiningDifficulty, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                            <TextBlock Grid.Row="4"
                                       Grid.Column="0"
                                       Margin="0,6,6,0"
                                       VerticalAlignment="Center"
                                       Text="Base Value" />
                            <TextBox Grid.Row="4"
                                     Grid.Column="1"
                                     Margin="0,6,0,0"
                                     Text="{Binding SelectedResource.BaseValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                            <TextBlock Grid.Row="5"
                                       Grid.Column="0"
                                       Margin="0,6,6,0"
                                       VerticalAlignment="Center"
                                       Text="Colour" />
                            <TextBox Grid.Row="5"
                                     Grid.Column="1"
                                     Margin="0,6,0,0"
                                     Text="{Binding SelectedResource.Colour, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                            <Border Grid.Row="6"
                                    Grid.ColumnSpan="2"
                                    Margin="0,12,0,0"
                                    BorderBrush="LightGray"
                                    BorderThickness="0,1,0,0" />

                            <TextBlock Grid.Row="7"
                                       Grid.ColumnSpan="2"
                                       Margin="0,8,0,4"
                                       Text="Fields producing this resource" />

                            <ListView Grid.Row="8"
                                      Grid.ColumnSpan="2"
                                      ItemsSource="{Binding ReferencingFieldsView}">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Field" Width="180" DisplayMemberBinding="{Binding DisplayName}" />
                                        <GridViewColumn Header="Id" Width="120" DisplayMemberBinding="{Binding Id}" />
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </Grid>
                    </Grid>
                </GroupBox>
            </StackPanel>

            <StackPanel Grid.Column="2"
                        Orientation="Vertical">
                <GroupBox Header="Fields">
                    <Grid Margin="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250" />
                            <ColumnDefinition Width="12" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Column="0"
                                    Grid.Row="0"
                                    Orientation="Horizontal">
                            <Button Content="Add"
                                    Command="{Binding AddFieldCommand}"
                                    Width="60" />
                            <Button Content="Remove"
                                    Command="{Binding RemoveFieldCommand}"
                                    Width="80"
                                    Margin="6,0,0,0" />
                        </StackPanel>

                        <ListBox Grid.Column="0"
                                 Grid.Row="1"
                                 Margin="0,8,0,0"
                                 ItemsSource="{Binding Fields}"
                                 SelectedItem="{Binding SelectedField, Mode=TwoWay}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Vertical" Margin="0,4">
                                        <TextBlock Text="{Binding DisplayName}" FontWeight="SemiBold" />
                                        <TextBlock Text="{Binding Id}" FontSize="11" Foreground="Gray" />
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <ScrollViewer Grid.Column="2"
                                      Grid.Row="0"
                                      Grid.RowSpan="2"
                                      VerticalScrollBarVisibility="Auto">
                            <Grid Margin="0,0,0,8"
                                  IsEnabled="{Binding SelectedField, Converter={StaticResource NullToBooleanConverter}}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="180" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0"
                                           Grid.ColumnSpan="2"
                                           Text="Field Details"
                                           FontWeight="Bold" />

                                <TextBlock Grid.Row="1"
                                           Grid.Column="0"
                                           Margin="0,12,6,0"
                                           VerticalAlignment="Center"
                                           Text="Id" />
                                <TextBox Grid.Row="1"
                                         Grid.Column="1"
                                         Margin="0,12,0,0"
                                         Text="{Binding SelectedField.Id, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                                <TextBlock Grid.Row="2"
                                           Grid.Column="0"
                                           Margin="0,6,6,0"
                                           VerticalAlignment="Center"
                                           Text="Display Name" />
                                <TextBox Grid.Row="2"
                                         Grid.Column="1"
                                         Margin="0,6,0,0"
                                         Text="{Binding SelectedField.DisplayName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                                <TextBlock Grid.Row="3"
                                           Grid.Column="0"
                                           Margin="0,6,6,0"
                                           VerticalAlignment="Center"
                                           Text="Colour" />
                                <TextBox Grid.Row="3"
                                         Grid.Column="1"
                                         Margin="0,6,0,0"
                                         Text="{Binding SelectedField.Colour, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                                <TextBlock Grid.Row="4"
                                           Grid.Column="0"
                                           Margin="0,6,6,0"
                                           VerticalAlignment="Center"
                                           Text="Spawn Weight" />
                                <TextBox Grid.Row="4"
                                         Grid.Column="1"
                                         Margin="0,6,0,0"
                                         Text="{Binding SelectedField.SpawnWeight, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                                <TextBlock Grid.Row="5"
                                           Grid.Column="0"
                                           Margin="0,12,6,0"
                                           VerticalAlignment="Center"
                                           Text="Amount (Min / Max)" />
                                <StackPanel Grid.Row="5"
                                            Grid.Column="1"
                                            Orientation="Horizontal"
                                            Margin="0,12,0,0">
                                    <TextBox Width="80"
                                             Margin="0,0,6,0"
                                             Text="{Binding SelectedField.Amount.Min, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                    <TextBlock Text="to"
                                               VerticalAlignment="Center"
                                               Margin="0,0,6,0" />
                                    <TextBox Width="80"
                                             Text="{Binding SelectedField.Amount.Max, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                </StackPanel>

                                <TextBlock Grid.Row="6"
                                           Grid.Column="0"
                                           Margin="0,12,6,0"
                                           VerticalAlignment="Center"
                                           Text="Difficulty (Min / Max)" />
                                <StackPanel Grid.Row="6"
                                            Grid.Column="1"
                                            Orientation="Horizontal"
                                            Margin="0,12,0,0">
                                    <TextBox Width="80"
                                             Margin="0,0,6,0"
                                             Text="{Binding SelectedField.Difficulty.Min, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                    <TextBlock Text="to"
                                               VerticalAlignment="Center"
                                               Margin="0,0,6,0" />
                                    <TextBox Width="80"
                                             Text="{Binding SelectedField.Difficulty.Max, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                </StackPanel>

                                <GroupBox Grid.Row="7"
                                          Grid.ColumnSpan="2"
                                          Header="Outputs"
                                          Margin="0,16,0,0">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>

                                        <StackPanel Grid.Row="0"
                                                    Orientation="Horizontal"
                                                    Margin="0,0,0,6">
                                            <Button Content="Add Output"
                                                    Command="{Binding AddOutputCommand}"
                                                    Width="110" />
                                            <Button Content="Remove Output"
                                                    Command="{Binding RemoveOutputCommand}"
                                                    Width="130"
                                                    Margin="6,0,0,0" />
                                        </StackPanel>

                                        <DataGrid Grid.Row="1"
                                                  AutoGenerateColumns="False"
                                                  CanUserAddRows="False"
                                                  ItemsSource="{Binding SelectedField.Outputs}"
                                                  SelectedItem="{Binding SelectedField.SelectedOutput, Mode=TwoWay}"
                                                  HeadersVisibility="Column"
                                                  Margin="0,0,0,4">
                                            <DataGrid.Columns>
                                                <DataGridComboBoxColumn Header="Resource"
                                                                        SelectedValueBinding="{Binding ResourceId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                        SelectedValuePath="Id"
                                                                        DisplayMemberPath="DisplayName">
                                                    <DataGridComboBoxColumn.ElementStyle>
                                                        <Style TargetType="ComboBox">
                                                            <Setter Property="ItemsSource"
                                                                    Value="{Binding DataContext.Resources, RelativeSource={RelativeSource AncestorType=Window}}" />
                                                        </Style>
                                                    </DataGridComboBoxColumn.ElementStyle>
                                                    <DataGridComboBoxColumn.EditingElementStyle>
                                                        <Style TargetType="ComboBox">
                                                            <Setter Property="ItemsSource"
                                                                    Value="{Binding DataContext.Resources, RelativeSource={RelativeSource AncestorType=Window}}" />
                                                        </Style>
                                                    </DataGridComboBoxColumn.EditingElementStyle>
                                                </DataGridComboBoxColumn>
                                                <DataGridTextColumn Header="Ratio"
                                                                    Binding="{Binding Ratio, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                    Width="100" />
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </Grid>
                                </GroupBox>
                            </Grid>
                        </ScrollViewer>
                    </Grid>
                </GroupBox>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>



