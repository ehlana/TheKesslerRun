<UserControl x:Class="TheKesslerRun2.Views.RecyclingCentreView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewmodels="clr-namespace:TheKesslerRun2.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=viewmodels:RecyclingCentreViewModel, IsDesignTimeCreatable=True}">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0"
                    Orientation="Vertical"
                    Margin="0,0,0,8">
            <TextBlock Text="Recycling centre inventory overview" FontSize="14" FontWeight="SemiBold" />
            <TextBlock Text="{Binding StatusMessage}" TextWrapping="Wrap" />
        </StackPanel>

        <DataGrid Grid.Row="1"
                  AutoGenerateColumns="False"
                  ItemsSource="{Binding Resources}"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  HeadersVisibility="Column"
                  Margin="0,0,0,8">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Resource" Binding="{Binding DisplayName}" Width="*" />
                <DataGridTextColumn Header="Amount" Binding="{Binding Amount, StringFormat={}{0:0}}" Width="120" />
                <DataGridTextColumn Header="Unit Value" Binding="{Binding UnitValue, StringFormat={}{0:C}}" Width="140" />
                <DataGridTextColumn Header="Total Value" Binding="{Binding TotalValue, StringFormat={}{0:C}}" Width="160" />
            </DataGrid.Columns>
        </DataGrid>

        <Border Grid.Row="2"
                Padding="12"
                BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
                BorderThickness="1"
                CornerRadius="4">
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                    <TextBlock Text="Total stored mass:" FontWeight="SemiBold" Margin="0,0,8,0" />
                    <TextBlock Text="{Binding TotalStoredAmount, StringFormat={}{0:0} units}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="Total stored value:" FontWeight="SemiBold" Margin="0,0,8,0" />
                    <TextBlock Text="{Binding TotalStoredValue, StringFormat={}{0:C}}" />
                </StackPanel>
                <TextBlock Text="{Binding LastDeliveryMessage}" TextWrapping="Wrap" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
