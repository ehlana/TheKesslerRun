<Window x:Class="TheKesslerRun2.SaveGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Save Game"
        Height="360"
        Width="480"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Choose a save slot or create a new one."
                   FontSize="14"
                   FontWeight="SemiBold" />

        <ListView x:Name="SlotsList"
                  Grid.Row="1"
                  Margin="0,8,0,12"
                  SelectionMode="Single"
                  SelectionChanged="OnSlotSelectionChanged">
            <ListView.View>
                <GridView AllowsColumnReorder="False">
                    <GridViewColumn Header="Name" Width="220">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Last Saved" Width="160">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding SavedAtUtc, StringFormat={}{0:G}}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Grid.Row="2"
                    Orientation="Vertical"
                    Margin="0,0,0,12">
            <TextBlock Text="Save name:" />
            <TextBox x:Name="NameTextBox"
                     Margin="0,4,0,0" />
        </StackPanel>

        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="New Slot"
                    Width="90"
                    Margin="0,0,8,0"
                    Click="OnNewSlotClicked" />
            <Button Content="Save"
                    Width="90"
                    Margin="0,0,8,0"
                    IsDefault="True"
                    Click="OnSaveClicked" />
            <Button Content="Cancel"
                    Width="90"
                    IsCancel="True" />
        </StackPanel>
    </Grid>
</Window>
